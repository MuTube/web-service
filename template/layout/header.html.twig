<header>
    <nav class="navbar navbar-fixed-top navbar-light bg-faded">
        <a class="navbar-brand" href="/">{{ siteInfo.name | capitalize }}</a>
        {% if isValidUser %}
            <ul class="nav navbar-nav">
                <li class="nav-item {% if activeMenuLink == 'dashboard' or activeMenuLink == '' %}active{% endif %}">
                    <a class="nav-link" href="/dashboard">Dashboard</a>
                </li>
                {% if hasAccess({ 0: 'user_management', 1: 'user_list' }) %}
                    <li class="nav-item {% if activeMenuLink == 'user' %}active{% endif %}">
                        <a class="nav-link" href="/user">Users</a>
                    </li>
                {% endif %}
                {% if hasAccess({ 0: 'track_management' }) %}
                    <li class="nav-item {% if activeMenuLink == 'track' %}active{% endif %}">
                        <a class="nav-link" href="/track">Tracks</a>
                    </li>
                {% endif %}
                <li class="nav-item {% if activeMenuLink == 'api' %}active{% endif %}">
                    <a class="nav-link" href="/api/doc">API Documentation</a>
                </li>
            </ul>
            <ul class="nav navbar-nav float-xs-right">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="supportedContentDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ userData.username }}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="supportedContentDropdown">
                        {% if hasAccess({ 0: 'settings_management', 1: 'settings_list' }) %}
                            <a class="dropdown-item" href="/settings">Settings</a>
                        {% endif %}
                        <a class="dropdown-item" href="/user/profile">My profile</a>
                    </div>
                </li>
            </ul>
        {% endif %}
    </nav>
</header>