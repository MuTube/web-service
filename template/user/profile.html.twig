{% extends 'layout/base.html.twig' %}

{% block pageTitle %}My Profile{% endblock %}

{% block content %}
    <div class="container container-page">
        <div class="page-header">
            <div class="media">
                {% if currentUser.image_name %}
                    <div class="media-left">
                        <div class="icon icon-lg" style="background-image: url('/files/user_image/{{ currentUser.image_name }}')"></div>
                    </div>
                {% endif %}
                <div class="media-body">
                    <h1>{{ currentUser.firstname }} {{ currentUser.lastname }}</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Contact data</h3>
                    </div>
                    <table class="panel-body table">
                        <tbody>
                            <tr>
                                <th width="30%">Username :</th>
                                <td>{{ currentUser.usrname }}</td>
                            </tr>
                            <tr>
                                <th>Firstname :</th>
                                <td>{{ currentUser.firstname | default('-') }}</td>
                            </tr>
                            <tr>
                                <th>Lastname :</th>
                                <td>{{ currentUser.lastname | default('-') }}</td>
                            </tr>
                            <tr>
                                <th>Email adress :</th>
                                <td>{{ currentUser.email | default('-') }}</td>
                            </tr>
                            <tr>
                                <th>Role :</th>
                                <td>{{ currentUser.role_name }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Reset password</h3>
                    </div>
                    <form class="panel-body" id="password-form" method="post" action="/user/{{ currentUser.id }}/changePassword">
                        <div class="form-group">
                            <label for="newPassword">New password :</label>
                            <input type="password" name="newPassword" id="newPassword" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="retypeNewPassword">Retype new password :</label>
                            <input type="password" name="retypeNewPassword" id="retypeNewPassword" class="form-control">
                        </div>
                        <div class="form-group submit text-center">
                            <input type="submit" value="Change" class="btn btn-primary btn-lg">
                        </div>
                    </form>
                </div>
                {% if currentUser.id != '1' and currentUser.id != '2' %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">API Token</h3>
                        </div>
                        <div class="panel-body box-sm">
                            <label for="newPassword">Your API Token :</label>
                            <input type="text" readonly="readonly" id="apiToken" class="form-control mrgb" value="{{ currentUser.api_key }}">
                            <a href="/user/{{ currentUser.id }}/resetAPIKey" class="btn btn-primary btn-lg">Reset Key</a>
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">My permissions</h3>
                    </div>
                    <table class="panel-body table">
                        <thead>
                            <tr>
                                <th width="40%">Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for permission in permissions %}
                                <tr>
                                    <td>{{ permission.name }}</td>
                                    <td>{{ permission.description }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center"><small>You don't have any permission</small></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="panel-footer">
                        <a href="#" class="permissions-view-all">Show all permissions</a>
                    </div>
                </div>
                <div class="panel panel-default hidden block-all-permissions">
                    <div class="panel-heading">
                        <h3 class="panel-title">All permissions</h3>
                    </div>
                    <table class="panel-body table">
                        <thead>
                            <tr>
                                <th width="40%">Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for permission in allPermissions %}
                                <tr>
                                    <td>{{ permission.name }}</td>
                                    <td>{{ permission.description }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center"><small>No permission found</small></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block additionalJs %}
    <script src="/script/pages/userProfile.js"></script>
{% endblock %}
