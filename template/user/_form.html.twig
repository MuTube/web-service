<form id="user_form" method="post" role="form" enctype="multipart/form-data">
    <div class="form-group">
        <label for="userImage">Image :</label>
        <input type="file" id="userImage" name="image" class="form-control">
        {% if userImageName %}
            <div class="image-container">
                <img src="/{{ user.image_filepath }}" id="userImage" class="center-block" width="55%">
            </div>
        {% endif %}
    </div>
    {% if user.id %}
        <div class="form-group">
            <label for="userId">ID :</label>
            <input type="text" id="userId" class="form-control" value="{{ user.id }}" disabled>
        </div>
        <div class="form-group">
            <label for="userUsername">Username :</label>
            <input type="text" id="userUsername" name="username" class="form-control" value="{{ user.username }}" disabled>
        </div>
    {% else %}
        <div class="form-group">
            <label for="userUsername">Username :</label>
            <input type="text" id="userUsername" name="username" class="form-control" value="{{ formValues.username }}">
        </div>
    {% endif %}
    <div class="form-group">
        <label for="userFirstname">Firstname :</label>
        <input type="text" id="userFirstname" name="firstname" class="form-control" value="{{ formValues.firstname | default('') }}">
    </div>
    <div class="form-group">
        <label for="userLastname">Lastname :</label>
        <input type="text" id="userLastname" name="lastname" class="form-control" value="{{ formValues.lastname | default('') }}">
    </div>
    <div class="form-group">
        <label for="userEmail">Email adress :</label>
        <input type="email" id="userEmail" name="email" class="form-control" value="{{ formValues.email | default('') }}">
    </div>
    {% if user.id == false %}
        <div class="form-group">
            <label for="userPassword">Password :</label>
            <input type="password" id="userPassword" name="password" class="form-control">
        </div>
        <div class="form-group">
            <label for="userPasswordConfirmation">Password confimation :</label>
            <input type="password" id="userPasswordConfirmation" name="password_confirmation" class="form-control">
        </div>
    {% endif %}
    <div class="form-group">
        <label for="userRole">Role :</label>
        {{ roleSelector({
            selected : formValues.role_id,
            htmlAttribs : {
                id : 'userRole',
                name : 'role_id'
            }
        }) | raw }}
    </div>
    <div class="form-group submit">
        <input type="submit" id="userSubmit" class="btn btn-primary float-xs-right" value="Save">
    </div>
</form>