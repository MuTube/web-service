{% extends 'layout/base.html.twig' %}

{% block pageTitle %}Reset user password{% endblock %}

{% block content %}
    <div class="container container-form">
        <div class="page-header pusher">
            <div class="pusher__body">
                <h1>Reset password :</h1>
            </div>
            <div class="pusher__item__header">
                {% if hasAccess({ 0 : 'user_management', 1 : 'user_read', 2 : 'user_' ~ user.id ~ '_read' }) %}
                    <a href="/user/{{ user.id }}/read" class="btn btn-primary btn-lg">Back to user</a>
                {% endif %}
            </div>
        </div>
        <form id="password-form" method="post">
            <div class="form-group">
                <label for="newPassword">New password :</label>
                <input type="password" name="newPassword" id="newPassword" class="form-control">
            </div>
            <div class="form-group">
                <label for="retypeNewPassword">Retype new password :</label>
                <input type="password" name="retypeNewPassword" id="retypeNewPassword" class="form-control">
            </div>
            <div class="form-group submit text-center">
                <input type="submit" value="Change" class="btn btn-primary btn-lg">
            </div>
        </form>
    </div>
{% endblock %}